@model fudbalskiTurnir.Models.Rezultati

@{
    ViewData["Title"] = "Create";
}

<h1>Unesi nov rezultat utakmice</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tim1Id" class="control-label">Domaćin</label>
                <select asp-for="Tim1Id" class ="form-control" asp-items="ViewBag.Tim1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tim2Id" class="control-label">Gost</label>
                <select asp-for="Tim2Id" class ="form-control" asp-items="ViewBag.Tim2Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tim1Golovi" class="control-label">Golovi domaćin</label>
                <input asp-for="Tim1Golovi" class="form-control" />
                <span asp-validation-for="Tim1Golovi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tim2Golovi" class="control-label">Golovi gost</label>
                <input asp-for="Tim2Golovi" class="form-control" />
                <span asp-validation-for="Tim2Golovi" class="text-danger"></span>
            </div>
            <p><b>@ViewBag.Poruka</b></p>
            <br />
            <div class="form-group">
                <input type="submit" value="Unesi" class="btn btn-primary" />
            </div>
                           

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
